<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/control_view_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/control_view_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:id="@+id/control_view_controls_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/control_change_transparency_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/btn_star_big_on" />

        <ImageView
            android:id="@+id/control_move_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/btn_star_big_on" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/control_lock_scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:enabled="true"
        android:text="@string/lock" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/small">

        <ImageView
            android:id="@+id/previous_image"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_left"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/next_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_right"
            android:layout_weight="1"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/control_view_data_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <SeekBar
            android:id="@+id/control_change_transparency"
            android:layout_width="@dimen/transparency_seekbar_width"
            android:layout_height="wrap_content" />
    </FrameLayout>
</LinearLayout>
